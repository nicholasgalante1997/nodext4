{
  "name": "@nodext4/root",
  "type": "module",
  "repository": {
    "type": "git"
  },
  "engines": {
    "bun": ">=1.2.4",
    "node": ">=22.0.0"
  },
  "packageManager": "bun@1.2.3",
  "files": [
    "lib",
    "core/**",
    "packages/**"
  ],
  "workspaces": [
    "core/**",
    "packages/**"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,ts}\"",
    "check-types": "turbo run check-types",
    "build:workspace": "turbo run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
